---
const images = [
  '/src/assets/Foto1.jpg',
  '/src/assets/Foto2.jpg',
  '/src/assets/Foto3.jpg',
  '/src/assets/Foto4.jpg',
];
---
<section class="container text-center my-4">
  <h2 class="text-info fw-bold">Recuerdos Juntos</h2>
  <div class="row justify-content-center">
    {images.map((img) => (
      <div class="col-sm-12 col-md-6 my-3 d-flex justify-content-center">
        <img src={img} alt="Recuerdo" class="img-fluid rounded shadow-lg" />
      </div>
    ))}
  </div>
  <i class="ph ph-camera text-info" style="font-size: 2rem;"></i>
</section>

<style>
  .img-animated {
    width: 100%;
    height: 400px;
    object-fit: cover;
    opacity: 0;
    transform: translateY(20px);
    animation: fadeUp 0.8s ease-out forwards;
  }

  @keyframes fadeUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>